---
const milestones = [
  {
    year: "1997",
    title: "Fundação da Elonet Habitação",
    description: "Início das atividades com foco técnico no Sistema Financeiro da Habitação, atuando na análise e gestão de crédito habitacional.",
    icon: "business"
  },
  {
    year: "2000",
    title: "Especialização em Crédito Habitacional e FCVS",
    description: "Consolidação da atuação técnica em contratos habitacionais e no Fundo de Compensação de Variações Salariais, acompanhando a evolução normativa do setor.",
    icon: "trending_up"
  },
  {
    year: "2005",
    title: "Estruturação de Processos Técnicos e Operacionais",
    description: "Desenvolvimento de metodologia própria para análise, habilitação e organização de carteiras de crédito habitacional.",
    icon: "settings"
  },
  {
    year: "2010",
    title: "Atuação Ampliada em Consultoria e Assessoria Técnica",
    description: "Expansão dos serviços de consultoria especializada, apoiando instituições financeiras em processos complexos e regulatórios.",
    icon: "groups"
  },
  {
    year: "2015",
    title: "Expansão da Atuação Nacional",
    description: "Atendimento a instituições em diferentes regiões do país, com presença consolidada em múltiplos estados.",
    icon: "public"
  },
  {
    year: "2020",
    title: "Reconhecimento pela Experiência Técnica e Confiabilidade",
    description: "Fortalecimento da reputação no mercado pela condução técnica consistente e pelo suporte estratégico aos agentes financeiros.",
    icon: "verified"
  },
  {
    year: "2024",
    title: "FCVS: Preparação para o Encerramento do Fundo",
    description: "Atuação estratégica voltada ao diagnóstico de carteiras e à condução dos processos de novação diante do prazo final de 31/12/2026.",
    icon: "schedule"
  },
  {
    year: "2026",
    title: "Marco Final: Novação e Encerramento do FCVS",
    description: "Apoio técnico às instituições no enfrentamento do maior desafio do SFH nas últimas décadas, com foco na viabilização da novação dos créditos.",
    icon: "flag"
  }
];
---

<section class="history-section">
  <div class="container">
    <h2 class="history-title">Nossa Jornada</h2>
    <div class="history-carousel">
      {milestones.map((milestone) => (
        <div class="milestone-card">
          <div class="milestone-year">{milestone.year}</div>
          <div class="milestone-icon">
            <span class="material-symbols-outlined">{milestone.icon}</span>
          </div>
          <h3 class="milestone-title">{milestone.title}</h3>
          <p class="milestone-description">{milestone.description}</p>
          <a href="/quem-somos" class="milestone-link">Saiba mais</a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .history-section {
    padding: var(--spacing-24) 0;
    background-color: white;
  }
  
  .history-title {
    font-size: 2rem;
    font-weight: var(--font-weight-bold);
    text-align: center;
    margin-bottom: var(--spacing-16);
    color: var(--color-gray-900);
  }
  
  @media (min-width: 640px) {
    .history-title {
      font-size: 2.5rem;
    }
  }
  
  .history-carousel {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-6);
    max-width: 80rem;
    margin: 0 auto;
  }
  
  @media (min-width: 640px) {
    .history-carousel {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .history-carousel {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .milestone-card {
    padding: var(--spacing-6);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    background-color: white;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }
  
  .milestone-card:hover {
    border-color: var(--color-institutional);
  }
  
  .milestone-year {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-institutional);
    margin-bottom: var(--spacing-4);
  }
  
  .milestone-icon {
    display: inline-flex;
    width: 3rem;
    height: 3rem;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    background-color: var(--color-green-50);
    color: var(--color-institutional);
    margin-bottom: var(--spacing-4);
  }
  
  .milestone-icon .material-symbols-outlined {
    font-size: 1.5rem;
  }
  
  .milestone-title {
    font-size: 1.125rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-3);
  }
  
  .milestone-description {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    line-height: 1.75;
    margin-bottom: var(--spacing-4);
    flex: 1;
  }
  
  .milestone-link {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-institutional);
    transition: color var(--transition-fast);
  }
  
  .milestone-link:hover {
    color: var(--color-institutional-hover);
  }
</style>

