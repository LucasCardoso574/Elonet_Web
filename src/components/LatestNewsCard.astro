---
import { getCollection } from 'astro:content';

// Pegar a última notícia (mais recente)
let noticias = await getCollection('noticias');

// Gerar IDs automáticos se necessário
noticias = noticias.map((noticia) => {
  if (!noticia.data.id) {
    const ids = noticias
      .map(n => n.data.id)
      .filter(id => id !== undefined && typeof id === 'number') as number[];
    const maxId = ids.length > 0 ? Math.max(...ids) : 0;
    return {
      ...noticia,
      data: {
        ...noticia.data,
        id: maxId + 1
      }
    };
  }
  return noticia;
});

// Ordenar por data
noticias = noticias.sort((a, b) => 
  new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);
const ultimaNoticia = noticias[0];
---

{ultimaNoticia && (
  <div 
    id="latest-news-card" 
    class="latest-news-card"
    data-news-id={ultimaNoticia.data.id || ultimaNoticia.slug}
  >
    <button 
      id="close-news-card" 
      class="close-news-card" 
      aria-label="Fechar notícia"
      onclick="closeLatestNewsCard()"
    >
      <span class="material-symbols-outlined">close</span>
    </button>
    <a href={`/noticias/${ultimaNoticia.slug}`} class="latest-news-link">
      <div class="latest-news-content">
        <div class="latest-news-badge">Nova Notícia</div>
        <h3 class="latest-news-title">{ultimaNoticia.data.titulo}</h3>
        <p class="latest-news-resumo">{ultimaNoticia.data.resumo}</p>
        <span class="latest-news-cta">Ler mais →</span>
      </div>
    </a>
  </div>
)}

<script is:inline>
  // Verificar se o card foi fechado anteriormente (localStorage)
  document.addEventListener('DOMContentLoaded', function() {
    const card = document.getElementById('latest-news-card');
    if (!card) return;
    
    // Pegar o ID da notícia atual
    const currentNewsId = card.getAttribute('data-news-id');
    if (!currentNewsId) return;
    
    // Verificar se esta notícia específica foi fechada
    const closedNewsId = localStorage.getItem('latest-news-card-closed-id');
    
    // Se foi fechada E é a mesma notícia, não mostrar
    if (closedNewsId === currentNewsId) {
      card.style.display = 'none';
      return;
    }
    
    // Se é uma notícia diferente ou nunca foi fechada, mostrar
    // Mostrar o card com animação após um pequeno delay
    setTimeout(() => {
      card.classList.add('show');
    }, 500);
  });
  
  function closeLatestNewsCard() {
    const card = document.getElementById('latest-news-card');
    if (card) {
      const newsId = card.getAttribute('data-news-id');
      
      card.classList.remove('show');
      card.classList.add('hide');
      
      // Salvar no localStorage o ID da notícia que foi fechada
      if (newsId) {
        localStorage.setItem('latest-news-card-closed-id', newsId);
      }
      
      // Remover após animação
      setTimeout(() => {
        card.style.display = 'none';
      }, 300);
    }
  }
</script>

<style>
  .latest-news-card {
    position: fixed;
    top: 5rem; /* Abaixo do header (4.5rem + 0.5rem de espaçamento) */
    right: 1rem;
    width: 360px;
    max-width: calc(100vw - 2rem);
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 1000; /* Abaixo do header (1020) mas acima do conteúdo */
    opacity: 0;
    transform: translateY(-20px);
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
    pointer-events: none;
    overflow: hidden;
  }
  
  .latest-news-card.show {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }
  
  .latest-news-card.hide {
    opacity: 0;
    transform: translateY(-20px);
  }
  
  .close-news-card {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.05);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    transition: background-color 0.2s ease;
    padding: 0;
  }
  
  .close-news-card:hover {
    background: rgba(0, 0, 0, 0.1);
  }
  
  .close-news-card .material-symbols-outlined {
    font-size: 20px;
    color: var(--color-gray-700);
  }
  
  .latest-news-link {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    padding-top: 1.25rem;
    transition: background-color 0.2s ease;
  }
  
  .latest-news-link:hover {
    background-color: var(--color-gray-50);
  }
  
  .latest-news-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .latest-news-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-institutional);
    color: white;
    font-size: 0.75rem;
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-full);
    width: fit-content;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .latest-news-title {
    font-size: 1.25rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-main);
    line-height: 1.3;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .latest-news-resumo {
    font-size: 1rem;
    color: var(--color-gray-600);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .latest-news-cta {
    font-size: 0.9375rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-institutional);
    margin-top: 0.25rem;
  }
  
  .latest-news-link:hover .latest-news-cta {
    color: var(--color-institutional-hover);
  }
  
  /* Responsivo */
  @media (max-width: 767px) {
    .latest-news-card {
      top: 5rem; /* Mesmo espaçamento no mobile */
      right: 0.5rem;
      left: 0.5rem;
      width: auto;
      max-width: none;
    }
    
    .latest-news-link {
      padding: 1.25rem;
      padding-top: 1rem;
    }
    
    .latest-news-title {
      font-size: 1rem;
    }
    
    .latest-news-resumo {
      font-size: 0.8125rem;
      -webkit-line-clamp: 2;
    }
  }
  
  @media (max-width: 480px) {
    .latest-news-card {
      right: 0.75rem;
      left: 0.75rem;
    }
  }
</style>

