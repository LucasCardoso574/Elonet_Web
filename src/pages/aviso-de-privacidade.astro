<style>
  .privacy {
    max-width: 980px;
    margin: 0 auto;
    padding: 56px 20px 72px;
    color: #111;
  }

  .privacy__header {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
  }

  .privacy__title {
    font-size: 44px;
    font-weight: 400;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .privacy__section {
    margin: 34px 0 0;
  }

  .privacy__h2 {
    margin: 0 0 18px;
    font-size: 26px;
    font-weight: 500;
    letter-spacing: 0.8px;
    text-transform: uppercase;
  }

  .privacy p {
    font-size: 16px;
    line-height: 1.9;
    margin: 0 0 16px;
    color: #2b2b2b;
  }

  .privacy a {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .privacy a:hover {
    text-decoration: underline;
  }

  /* tabela igual ao print */
  .privacy__tableWrap {
    margin-top: 18px;
    overflow-x: auto;
  }

  .privacy__table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #e8e8e8;
    background: #fff;
  }

  .privacy__table th,
  .privacy__table td {
    border: 1px solid #e8e8e8;
    padding: 18px 16px;
    vertical-align: top;
    font-size: 14px;
    line-height: 1.7;
  }

  .privacy__table th {
    width: 34%;
    background: #f6f6f6;
    text-align: left;
    font-weight: 600;
    color: #222;
  }

  /* lista (i), (ii), (iii) ... */
  .privacy__roman {
    margin: 14px 0 18px 22px;
    padding: 0;
    color: #2b2b2b;
    line-height: 1.9;
    font-size: 16px;
  }

  .privacy__roman li {
    margin: 10px 0;
  }

  .privacy__roman {
    list-style: none;
  }
  .privacy__roman li {
    position: relative;
    padding-left: 28px;
  }
  .privacy__roman li::before {
    position: absolute;
    left: 0;
    top: 0;
    content: "(" counter(item, lower-roman) ")";
    counter-increment: item;
  }
  .privacy__roman {
    counter-reset: item;
  }

  /* “Endereço / E-mail / ...” igual bloco do print */
  .privacy__dl {
    margin: 10px 0 0;
  }

  .privacy__dlRow {
    display: grid;
    grid-template-columns: max-content 1fr;
    gap: 10px;
    padding: 12px 0;
  }

  .privacy__dlRow dt {
    font-weight: 700;
    color: #111;
  }

  .privacy__dlRow dd {
    margin: 0;
    color: #2b2b2b;
  }

  .privacy__footer {
    margin-top: 44px;
    padding-top: 22px;
    border-top: 1px solid #eee;
  }

  .privacy__footer p {
    margin: 6px 0;
    font-size: 14px;
    color: #444;
  }

  /* responsivo: título menor no mobile */
  @media (max-width: 520px) {
    .privacy {
      padding-top: 40px;
    }
    .privacy__title {
      font-size: 34px;
      text-align: center;
    }
    .privacy__h2 {
      font-size: 20px;
    }
    .privacy__dlRow {
      grid-template-columns: 1fr;
      gap: 6px;
    }
  }
</style>
