---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Buscar notícias e gerar IDs automáticos se não existirem
let noticias = await getCollection('noticias');

// Gerar IDs automáticos para notícias que não têm ID
noticias = noticias.map((noticia, index) => {
  if (!noticia.data.id) {
    // Gerar ID baseado no maior ID existente + 1, ou usar índice + 1000
    const ids = noticias
      .map(n => n.data.id)
      .filter(id => id !== undefined && typeof id === 'number') as number[];
    const maxId = ids.length > 0 ? Math.max(...ids) : 0;
    return {
      ...noticia,
      data: {
        ...noticia.data,
        id: maxId + 1
      }
    };
  }
  return noticia;
});

// Ordenar por data
noticias = noticias.sort((a, b) => 
  new Date(b.data.data).getTime() - new Date(a.data.data).getTime()
);
---

<Layout title="Notícias - Elonet Habitação">
  <Header currentPath={Astro.url.pathname} />
  <main>
    <section class="page-hero">
      <div class="page-hero-gradient-overlay"></div>
      <div class="container">
        <h1 class="page-title">Notícias</h1>
        <p class="page-subtitle">Acompanhe as últimas novidades do mercado habitacional</p>
      </div>
    </section>
    
    <section class="noticias-section">
      <div class="container">
        <div class="noticias-grid">
          {noticias.map((noticia) => (
            <a href={`/noticias/${noticia.slug}`} class="noticia-card">
              <div class="noticia-image-wrapper">
                <img 
                  src={noticia.data.imagem} 
                  alt={noticia.data.titulo}
                  class="noticia-image"
                  loading="lazy"
                />
              </div>
              <div class="noticia-content">
                <div class="noticia-meta">
                  <time class="noticia-date">{new Date(noticia.data.data).toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' })}</time>
                  <span class="noticia-author">{noticia.data.autor}</span>
                </div>
                <h2 class="noticia-title">{noticia.data.titulo}</h2>
                <p class="noticia-resumo">{noticia.data.resumo}</p>
                <span class="noticia-link">Ler mais →</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  // Preload image and remove skeleton when loaded
  (function() {
    const hero = document.querySelector('.page-hero');
    if (!hero) return;
    
    const imageUrl = 'https://unsplash.com/photos/fOxhlF8SCt4/download?force=true&w=2000';
    const img = new Image();
    img.onload = () => {
      hero.style.backgroundImage = `url('${imageUrl}')`;
      hero.classList.add('loaded');
    };
    img.src = imageUrl;
  })();
</script>

<script is:inline>
  // Scroll suave para links internos
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href && href !== '#') {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            const headerOffset = 80;
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
            
            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });
  });
  
</script>

<style>
  .page-hero {
    position: relative;
    padding: var(--spacing-16);
    background-color: var(--color-gray-800);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }
  
  .page-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      var(--color-gray-200) 0%,
      var(--color-gray-100) 50%,
      var(--color-gray-200) 100%
    );
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s ease-in-out infinite;
    z-index: 1;
    transition: opacity 0.5s ease-out;
  }
  
  .page-hero.loaded::after {
    opacity: 0;
    pointer-events: none;
  }
  
  .page-hero-gradient-overlay {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(15, 35, 15, 0.7), rgba(15, 35, 15, 0.5));
    z-index: 2;
    opacity: 0;
    transition: opacity 0.5s ease-out;
    pointer-events: none;
  }
  
  .page-hero.loaded .page-hero-gradient-overlay {
    opacity: 1;
  }
  
  .page-hero .container {
    position: relative;
    z-index: 5;
  }
  
  @keyframes skeleton-loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
  
  .page-title {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    color: white;
    text-align: center;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    margin-bottom: var(--spacing-4);
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    color: white;
    text-align: center;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }
  
  .noticias-section {
    padding: var(--spacing-16) 0;
    background-color: var(--color-background-light);
  }
  
  .noticias-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }
  
  @media (min-width: 768px) {
    .noticias-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .noticias-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .noticia-card {
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    text-decoration: none;
    color: inherit;
  }
  
  .noticia-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .noticia-image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-gray-200);
  }
  
  .noticia-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }
  
  .noticia-card:hover .noticia-image {
    transform: scale(1.05);
  }
  
  .noticia-content {
    padding: var(--spacing-6);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    flex: 1;
  }
  
  .noticia-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
    font-size: 0.875rem;
    color: var(--color-gray-600);
  }
  
  .noticia-date {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }
  
  .noticia-author {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }
  
  .noticia-title {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-main);
    line-height: 1.3;
    margin: 0;
  }
  
  .noticia-resumo {
    font-size: 1.125rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  
  .noticia-link {
    font-size: 0.9375rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-institutional);
    margin-top: var(--spacing-2);
  }
  
  .noticia-card:hover .noticia-link {
    color: var(--color-institutional-hover);
  }
</style>

